<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General Settings Section -->
    <PreferenceCategory
        android:title="General Settings">
        
        <EditTextPreference
            android:key="pref_username"
            android:title="Username"
            android:summary="Enter your username"
            android:dialogTitle="Username"
            android:icon="@drawable/ic_settings" />

        <SwitchPreferenceCompat
            android:key="pref_dark_mode"
            android:title="Dark Mode"
            android:summary="Enable or disable dark theme"
            android:defaultValue="false"
            android:icon="@drawable/ic_settings" />
    </PreferenceCategory>

    <!-- Notifications Settings Section -->
    <PreferenceCategory
        android:title="Notifications">

        <!-- Enable or disable notifications -->
        <SwitchPreferenceCompat
            android:key="pref_enable_notifications"
            android:title="Enable Notifications"
            android:defaultValue="true"
            android:icon="@drawable/ic_settings" />

        <!-- Select a notification sound -->
        <Preference
            android:key="pref_notification_sound"
            android:title="Notification Sound"
            android:summary="Choose your notification sound"
            android:icon="@drawable/ic_settings" />

        <!-- Choose a ringtone from a list -->
        <ListPreference
            android:key="pref_notification_ringtone"
            android:title="Notification Ringtone"
            android:summary="Select notification ringtone"
            android:entries="@array/ringtone_names"
            android:entryValues="@array/ringtone_values"
            android:defaultValue="default"
            android:icon="@drawable/ic_settings" />

        <!-- Advanced Notification Settings -->
        <PreferenceCategory
            android:title="Advanced Notification Settings">

            <SwitchPreferenceCompat
                android:key="pref_vibrate"
                android:title="Vibrate"
                android:summary="Enable vibration for notifications"
                android:defaultValue="true"
                android:icon="@drawable/ic_settings" />

            <ListPreference
                android:key="pref_notification_priority"
                android:title="Notification Priority"
                android:summary="Set the notification priority level"
                android:entries="@array/priority_entries"
                android:entryValues="@array/priority_values"
                android:defaultValue="high"
                android:icon="@drawable/ic_settings" />
        </PreferenceCategory>
    </PreferenceCategory>

</PreferenceScreen>
